#!/usr/bin/perl
use v5.26;
use File::Basename;
my $what = join ' ', @ARGV;
$what ||= 'in a bit';
`prepend ~/.currently "ðŸ’¤ back $what"`;
my @paths   = grep { -f && /\/banner\S.*$/ } glob( dirname($0) . '/*' );
my @scripts = map  { basename($_) } @paths;
my $script  = $scripts[ int( rand( scalar(@scripts) ) ) ];
($script) ? exec "$script back $what" : exec "banner back $what";
