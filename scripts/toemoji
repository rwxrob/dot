#!/usr/bin/bash

declare -A emoji
emoji[smile]=ðŸ˜ƒ
emoji[bear]=ðŸ»
emoji[hamburger]=ðŸ”
emoji[lightbulb]=ðŸ’¡
emoji[pomo]=ðŸ…

toemoji() {
  local in=/dev/stdin
  local out=/dev/stdout
  local file="$1"
  if [[ -n $file ]];then
    in="$file"
    out="$(mktemp)"
  fi
  IFS=$'\n'
  while read -r line; do 
    for k in ${!emoji[@]}; do 
      line=${line//:$k:/${emoji[$k]}}
    done
    echo "$line" >> $out
  done < "$in"
  if [[ -n $file ]]; then
    cp "$out" "$file"
    rm "$out"
  fi
}

toemoji "$@"
